  "version": "0.2.0",
  "configurations": [
    {
      "name": "Stackhound",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "ts-node",
      "runtimeArgs": ["-r", "tsconfig-paths/register", "-P", "tsconfig.json", "src/start.ts"],
      "cwd": "${workspaceRoot}",
      "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
        ],
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}
